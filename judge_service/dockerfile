FROM python:3.12-slim AS builder

WORKDIR /build

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install uv
RUN pip install --no-cache-dir uv

# Copy dependency files
COPY pyproject.toml uv.lock ./

# Create a virtual environment and install dependencies
RUN uv venv /build/venv && \
    . /build/venv/bin/activate && \
    uv pip install .

# Second stage - runtime
FROM python:3.12-slim

WORKDIR /app

# Install curl for healthchecks
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy the virtual environment from the builder stage
COPY --from=builder /build/venv /app/venv

# Copy application code
COPY judge_service/ ./judge_service/
COPY query_storage/ ./query_storage/
COPY evaluation_storage/ ./evaluation_storage/
COPY shared/ ./shared/
COPY migrations/ ./migrations/

# Create data directory for ChromaDB
RUN mkdir -p /app/judge_data

# Expose the port the app runs on
EXPOSE 8000

# Setup environment variables
ENV PATH="/app/venv/bin:$PATH"
ENV PYTHONPATH="/app"

# Command to run the application
CMD ["/app/venv/bin/python", "-m", "uvicorn", "judge_service.api:app", "--host", "0.0.0.0", "--port", "8000"]
